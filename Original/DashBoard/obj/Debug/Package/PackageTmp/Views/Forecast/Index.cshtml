@{
    ViewBag.Title = "Forecast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Forecast</h2>


<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Hightchart/NuevaVersion/highcharts.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Hightchart/highcharts-more.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Hightchart/exporting.js")" type="text/javascript"></script>



<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ObtainListResult", "Forecast")',
            dataType: 'json',
            contentType: false,
            processData: false,

            success: function (response) {
                //graphic();
                graphic();
            },
            error: function (response) {
                alert("error");
            }

        });

     //   graphic();
    });

    function graphic() {
        
    
        $('#container').highcharts({

                chart: {
                    type: 'gauge',
                    plotBorderWidth: 1,
                    plotBackgroundColor: {
                        linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                        stops: [
                            [0, '#FFF4C6'],
                            [0.3, '#FFFFFF'],
                            [1, '#FFF4C6']
                        ]
                    },
                    plotBackgroundImage: null,
                    height: 200
                },

                title: {
                    text: 'Forecasted'
                },

                pane: [{
                    startAngle: -45,
                    endAngle: 45,
                    background: null,
                    center: ['25%', '145%'],
                    size: 300
                }, {
                    startAngle: -45,
                    endAngle: 45,
                    background: null,
                    center: ['75%', '145%'],
                    size: 300
                }],

                tooltip: {
                    enabled: false
                },

                yAxis: [{
                    min: 0,
                    max: 10000000,
                    minorTickPosition: 'outside',
                    tickPosition: 'outside',
                    labels: {
                        rotation: 'auto',
                        distance: 0
                    },
                    plotBands: [{
                        from: 0,
                        to: 2000000,
                    
                        color: '#C02316',
                        innerRadius: '100%',
                        outerRadius: '105%'
                    }],
                    pane: 0,
                    title: {
                        text: 'Filed<br/><span style="font-size:8px">2000000 Millons</span>',
                        y: -40
                    }
                }, {
                    min: 0,
                    max: 34,
                    minorTickPosition: 'outside',
                    tickPosition: 'outside',
                    labels: {
                        rotation: 'auto',
                        distance: 20
                    },
                    plotBands: [{
                        from: 0,
                        to: 3,
                        color: '#C02316',
                        innerRadius: '100%',
                        outerRadius: '105%'
                    }],
                    pane: 1,
                    title: {
                        text: 'Client<br/><span style="font-size:8px">3</span>',
                        y: -40
                    }
                }],

                plotOptions: {
                    gauge: {
                        dataLabels: {
                            enabled: false
                        },
                        dial: {
                            radius: '100%'
                        }
                    }
                },


                series: [{
                    name: 'Channel A',
                    data: [2000000],
                    yAxis: 0
                }, {
                    name: 'Channel B',
                    data: [3],
                    yAxis: 1
                }]

            },

            // Let the music play
            function (chart) {


            });
    }

</script>

<div id="container" style="width: 600px; height: 300px; margin: 0 auto"></div>